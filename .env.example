# --- Mercado Libre ---
MERCADOLIBRE_BASE_URL=https://api.mercadolibre.com
MERCADOLIBRE_AUTH_URL=https://auth.mercadolibre.com.ec
MERCADOLIBRE_CLIENT_ID=your_app_id
MERCADOLIBRE_CLIENT_SECRET=your_client_secret
MERCADOLIBRE_REDIRECT_URI=https://127.0.0.1:8000/mercadolibre/callback/
MERCADOLIBRE_FRESHNESS_THRESHOLD_HOURS=24
MERCADOLIBRE_PUBLICATION_RULES='{"NOTEBOOK": {"price_threshold": 400.00}, "MONITORES Y TELEVISORES": {"price_threshold": 0.00}, "COMPUTADORES DESKTOP, AIO, MINIPC": {"price_threshold": 100.00}}'

# Mercado Libre Price Engine
MERCADOLIBRE_IVA_RATE=0.15
MERCADOLIBRE_COMMISSION_RATE=0.10
MERCADOLIBRE_SHIPPING_FEE=5.00
MERCADOLIBRE_TARGET_MARGIN=0.15
MERCADOLIBRE_OPERATIONAL_COST=5.00

# --- Tiered Commission Rates (Optional) ---
# If not set, MERCADOLIBRE_COMMISSION_RATE is used for all products.
# Format: JSON array with "max" (upper threshold, use null for final tier) and "rate" (commission as decimal)
# Example: 4-tier structure - $0-100: 18%, $100-500: 15%, $500-2000: 12%, $2000+: 10%
MERCADOLIBRE_COMMISSION_TIERS='[{"max": 100, "rate": 0.18}, {"max": 500, "rate": 0.15}, {"max": 2000, "rate": 0.12}, {"max": null, "rate": 0.10}]'

